<?xml version="1.0" encoding="UTF-8" ?>
<!--These sounds are from the CRJ700-family, a huge huge thanks to its creators!!-->

<PropertyList>
	<params>
		<groundspeed-kt>velocities/groundspeed-kt</groundspeed-kt>
		<airspeed-kt>velocities/airspeed-kt</airspeed-kt>
	</params>
	<fx>
		<flaps>
			<name>Flaps in transit</name>
			<path>Sounds/flaps.wav</path>
			<mode>once</mode>
			<condition>
				<and>
					<property>controls/flight/flaps-start-snd</property>
					<not><property>controls/flight/flaps-stop-snd</property></not>
				</and>
			</condition>
			<position>
				<x>3.8</x>
				<y>0.01</y>
				<z>-2.30</z>
			</position>
			<max-dist>20</max-dist>
			<reference-dist>1</reference-dist>
		</flaps>
		<flapsStop>
			<name>Flaps stopping</name>
			<path>Sounds/flaps-stop1.wav</path>
			<mode>once</mode>
			<property>controls/flight/flaps-stop-snd</property>
			<position>
				<x>3.8</x>
				<y>0.01</y>
				<z>-2.30</z>
			</position>
			<max-dist>20</max-dist>
			<reference-dist>1</reference-dist>
		</flapsStop>
		<slats>
			<name>Slats in transit</name>
			<path>Sounds/slats.wav</path>
			<mode>in-transit</mode>		
			<property>surface-positions/slat-pos-norm</property>
			<position>
				<x>-2.60</x>
				<y>0.01</y>
				<z>-2.30</z>
			</position>
			<max-dist>20</max-dist>
			<reference-dist>1</reference-dist>
		</slats>
		<!-- Speedbrakes/spoilers hydraulics -->
		<speedbrake>
			<name>Left speedbrake in transit</name>
			<path>Sounds/spoilers.wav</path>
			<mode>in-transit</mode>
			<property>surface-positions/left-speedbrake-pos-norm</property>
			<volume>
				<offset>-0.7</offset>
			</volume>
			<position>
				<x>1</x>
				<y>-3</y>
				<z>0</z>
			</position>
		</speedbrake>
		<speedbrake>
			<name>Right speedbrake in transit</name>
			<path>Sounds/spoilers.wav</path>
			<mode>in-transit</mode>
			<property>surface-positions/right-speedbrake-pos-norm</property>
			<volume>
				<offset>-0.7</offset>
			</volume>
			<position>
				<x>1</x>
				<y>3</y>
				<z>0</z>
			</position>
		</speedbrake>
		<!-- Switch effects -->
		<click>
			<name>Switch click</name>
			<mode>once</mode>
			<path>Sounds/click.wav</path>
			<condition>
				<property>sim/sound/click</property>
				<property>sim/current-view/internal</property>
			</condition>
		</click>
		<click2>
			<name>Switch click2</name>
			<mode>once</mode>
			<path>Sounds/click2.wav</path>
			<condition>
				<property>sim/sound/click2</property>
				<property>sim/current-view/internal</property>
			</condition>
		</click2>
		<swlclick>
			<name>Switch light click</name>
			<mode>once</mode>
			<path>Sounds/switchlight-click.wav</path>
			<condition>
				<property>sim/sound/swl-click</property>
				<property>sim/current-view/internal</property>
			</condition>
		</swlclick>
		<sign>
			<name>Passenger sign</name>
			<mode>once</mode>
			<path>Sounds/cabinalert.wav</path>
			<condition>
				<and>
					<property>sim/sound/passenger-sign</property>
					<property>sim/current-view/internal</property>
				</and>
			</condition>
		</sign>
		<!-- Alarms -->
		<alarm>
			<name>Master warning</name>
			<mode>looped</mode>
			<path>Sounds/warning.wav</path>
			<condition>
				<property>sim/alarms/master-warning</property>
			</condition>
		</alarm>
		<alarm>
			<name>Overspeed alarm</name>
			<mode>looped</mode>
			<path>Sounds/overspeed.wav</path>
			<condition>
				<property>sim/alarms/overspeed-alarm</property>
			</condition>
		</alarm>
		<alarm>
			<name>Autopilot disconnect</name>
			<mode>once</mode>
			<type>avionics</type>
			<path>Sounds/autopilot-disconnect.wav</path>
			<condition>
				<property>it-autoflight/apoffsound</property>     
			</condition>
			<volume>
				<property>sim/current-view/internal</property>
			</volume>
		</alarm>
		<altitude-alert>
			<name>Altitude alert</name>
			<mode>once</mode>
			<path>Sounds/c-chord.wav</path>
			<condition>
				<property>sim/alarms/altitude-alert</property>
			</condition>
			<volume>
				<property>sim/model/sound-enabled</property>
			</volume>
		</altitude-alert>
		<!-- Speed callouts -->
		<callout>
			<name>80 knots</name>
			<mode>once</mode>
			<type>avionics</type>
			<path>Sounds/80kt.wav</path>
			<condition>
				<and>
					<or>
						<property>gear/gear[0]/wow</property>
						<property>gear/gear[1]/wow</property>
						<property>gear/gear[2]/wow</property>
					</or>
					<less-than>
						<property alias="/params/airspeed-kt" />
						<property>autopilot/internal/lookahead-5-sec-airspeed-kt</property>
					</less-than>
					<greater-than>
						<property alias="/params/airspeed-kt" />
						<value>80</value>
					</greater-than>
					<less-than>
						<property alias="/params/airspeed-kt" />
						<value>88</value>
					</less-than>
				</and>
			</condition>
		</callout>
		<callout>
			<name>V1</name>
			<mode>once</mode>
			<type>avionics</type>
			<path>Sounds/v1.wav</path>
			<condition>
				<and>
					<or>
						<property>gear/gear[0]/wow</property>
						<property>gear/gear[1]/wow</property>
						<property>gear/gear[2]/wow</property>
					</or>
					<less-than>
						<property alias="/params/airspeed-kt" />
						<property>autopilot/internal/lookahead-5-sec-airspeed-kt</property>
					</less-than>
					<greater-than-equals>
						<property alias="/params/airspeed-kt" />
						<property>instrumentation/adc/reference/v1</property>
					</greater-than-equals>
					<less-than>
						<property alias="/params/airspeed-kt" />
						<property>instrumentation/adc/reference/vr</property>
					</less-than>
				</and>
			</condition>
		</callout>
		<callout>
			<name>Vr</name>
			<mode>once</mode>
			<type>avionics</type>
			<path>Sounds/vr.wav</path>
			<condition>
				<and>
					<or>
						<property>gear/gear[0]/wow</property>
						<property>gear/gear[1]/wow</property>
						<property>gear/gear[2]/wow</property>
					</or>
					<less-than>
						<property alias="/params/airspeed-kt" />
						<property>autopilot/internal/lookahead-5-sec-airspeed-kt</property>
					</less-than>
					<greater-than-equals>
						<property alias="/params/airspeed-kt" />
						<property>instrumentation/adc/reference/vr</property>
					</greater-than-equals>
					<less-than>
						<property alias="/params/airspeed-kt" />
						<property>instrumentation/adc/reference/v2</property>
					</less-than>
				</and>
			</condition>
		</callout>
		<callout>
			<name>V2</name>
			<mode>once</mode>
			<type>avionics</type>
			<path>Sounds/v2.wav</path>
			<condition>
				<and>
					<less-than>
						<property alias="/params/airspeed-kt" />
						<property>autopilot/internal/lookahead-5-sec-airspeed-kt</property>
					</less-than>
					<greater-than-equals>
						<property alias="/params/airspeed-kt" />
						<property>instrumentation/adc/reference/v2</property>
					</greater-than-equals>
					<less-than>
						<property>instrumentation/radar-altimeter[0]/radar-altitude-ft</property>
						<value>500</value>
					</less-than>
				</and>
			</condition>
		</callout>
		<callout>
			<name>Positive climb rate</name>
			<mode>once</mode>
			<type>avionics</type>
			<path>Sounds/proc.wav</path>
			<condition>
				<and>
					<less-than>
						<property alias="/params/airspeed-kt" />
						<property>autopilot/internal/lookahead-5-sec-airspeed-kt</property>
					</less-than>
					<greater-than-equals>
						<property alias="/params/airspeed-kt" />
						<property>instrumentation/adc/reference/v2</property>
					</greater-than-equals>
					<greater-than-equals>
						<property>instrumentation/vertical-speed-indicator[0]/indicated-speed-fpm</property>
						<value>500</value>
					</greater-than-equals>
					<less-than>
						<property>instrumentation/radar-altimeter[0]/radar-altitude-ft</property>
						<value>300</value>
					</less-than>
					<greater-than>
						<property>instrumentation/attitude-indicator[0]/indicated-pitch-deg</property>
						<value>7</value>
					</greater-than>
					<less-than>
						<property>instrumentation/attitude-indicator[0]/indicated-pitch-deg</property>
						<value>17</value>
					</less-than>
                                        <equals>
                                            <property>controls/gear/gear-down</property>
                                            <value>1</value>
                                        </equals>
				</and>
			</condition>
		</callout>
		
		<!-- generic wind -->
		<wind>
			<name>Cockpit aircon</name>
			<path>Sounds/cockpit-aircon.wav</path>
			<mode>looped</mode>
		    <condition>
				<property>sim/current-view/internal</property>
				<or>
					<property>systems/pneumatic/pressure-left</property>
					<property>systems/pneumatic/pressure-right</property>
				</or>
			</condition>
		    <volume>
				<factor>0.35</factor>
			</volume>
		</wind>  
		<wind>
			<name>Wind</name>
			<path>Sounds/wind.wav</path>
			<mode>looped</mode>
		    <condition>
				<greater-than>
					<property alias="/params/airspeed-kt" />
					<value>20</value>
				</greater-than>
			</condition>
		    <pitch>
				<property alias="/params/airspeed-kt" />
				<type>sqrt</type>
				<offset>0.7</offset>
				<factor>0.015</factor>
				<max>1.5</max>
			</pitch>
		    <volume>
				<property alias="/params/airspeed-kt" />
				<type>sqrt</type>
				<offset>-0.2</offset>
				<factor>0.05</factor>
			</volume>
			<reference-dist>150</reference-dist>
			<max-dist>400</max-dist>
		</wind>  		

		<turbL>
			<name>Turbulence Speedbrake L lowspeed</name>
			<path>Sounds/air-brakes.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<greater-than>
						<property>surface-positions/left-speedbrake-pos-norm</property>
						<value>0</value>
					</greater-than>
					<less-than>
						<property alias="/params/airspeed-kt" />
						<value>150</value>
					</less-than>
				</and>
			</condition>
			<volume>
				<property alias="/params/airspeed-kt" />
				<type>sqrt</type>
				<offset>-0.3</offset>
				<factor>0.055</factor>
			</volume>
			<position>
				<x>2.37</x>
				<y>6</y>
				<z>-1.95</z>
			</position>	   
		</turbL>    
		<turbL>
			<name>Turbulence Speedbrake L highspeed</name>
			<path>Sounds/air-brakes.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<greater-than>
						<property>surface-positions/left-speedbrake-pos-norm</property>
						<value>0</value>
					</greater-than>
					<greater-than>
						<property alias="/params/airspeed-kt" />
						<value>150</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<property>surface-positions/left-speedbrake-pos-norm</property>
				<offset>0.37</offset>
				<factor>0.6</factor>
			</volume>
			<position>
				<x>2.37</x>
				<y>6</y>
				<z>-1.95</z>
			</position>	   
		</turbL>    

		<turbR>
			<name>Turbulence Speedbrake R lowspeed</name>
			<path>Sounds/air-brakes.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<greater-than>
						<property>surface-positions/right-speedbrake-pos-norm</property>
						<value>0</value>
					</greater-than>
					<less-than>
						<property alias="/params/airspeed-kt" />
						<value>150</value>
					</less-than>
				</and>
			</condition>
			<volume>
				<property alias="/params/airspeed-kt" />
				<type>sqrt</type>
				<offset>-0.3</offset>
				<factor>0.055</factor>
			</volume>
			<volume>
				<property>surface-positions/right-speedbrake-pos-norm</property>
			</volume>
			<position>
				<x>2.37</x>
				<y>-6</y>
				<z>-1.95</z>
			</position>	   
		</turbR> 
		<turbR>
			<name>Turbulence Speedbrake R highspeed</name>
			<path>Sounds/air-brakes.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<greater-than>
						<property>surface-positions/right-speedbrake-pos-norm</property>
						<value>0</value>
					</greater-than>
					<greater-than>
						<property alias="/params/airspeed-kt" />
						<value>150</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<property>surface-positions/right-speedbrake-pos-norm</property>
				<offset>0.37</offset>
				<factor>0.6</factor>
			</volume>
			<position>
				<x>2.37</x>
				<y>-6</y>
				<z>-1.95</z>
			</position>	   
		</turbR> 
		<!-- main gear -->
		<gear>
			<name>Left main gear touchdown</name>
			<path>Sounds/squeaking-main.wav</path>
			<mode>once</mode>
			<condition>
				<property>gear/gear[1]/wow</property>
			</condition>
			<volume>
				<property>sim/model/sound-enabled</property>
			</volume>
			<volume>
				<offset>-0.95</offset>
			</volume>
			<position>
				<x>1.25</x>
				<y>-2</y>
				<z>-3.357</z>
			</position>
			<reference-dist>50</reference-dist>
			<max-dist>100</max-dist>
		</gear>
		<gear>
			<name>Left main gear touchdown 2</name>
			<path>Sounds/touchdown-vibrations.wav</path>
			<mode>once</mode>
			<condition>
				<property>gear/gear[1]/wow</property>
			</condition>
			<volume>
				<property>sim/model/sound-enabled</property>
			</volume>
			<volume>
				<offset>-0.5</offset>
			</volume>
			<position>
				<x>1.25</x>
				<y>-2</y>
				<z>-3.357</z>
			</position>
			<reference-dist>50</reference-dist>
			<max-dist>100</max-dist>
		</gear>
		<gear>
			<name>Right main gear touchdown</name>
			<path>Sounds/squeaking-main.wav</path>
			<mode>once</mode>
			<condition>
				<property>gear/gear[2]/wow</property>
			</condition>
			<volume>
				<property>sim/model/sound-enabled</property>
			</volume>
			<volume>
				<offset>-0.95</offset>
			</volume>
			<position>
				<x>1.25</x>
				<y>2</y>
				<z>-3.357</z>
			</position>
			<reference-dist>50</reference-dist>
			<max-dist>100</max-dist>
		</gear>
		<gear>
			<name>Right main gear touchdown 2</name>
			<path>Sounds/touchdown-vibrations.wav</path>
			<mode>once</mode>
			<condition>
				<property>gear/gear[2]/wow</property>
			</condition>
			<volume>
				<property>sim/model/sound-enabled</property>
			</volume>
			<volume>
				<offset>-0.5</offset>
			</volume>
			<position>
				<x>1.25</x>
				<y>2</y>
				<z>-3.357</z>
			</position>
			<reference-dist>50</reference-dist>
			<max-dist>100</max-dist>
		</gear>
		<rumble><!-- main internal -->
			<name>Main gear rumble</name>
			<mode>looped</mode>
			<path>Sounds/roll.wav</path>
			<condition>
				<and>
					<or>
						<property>gear/gear[1]/wow</property>
						<property>gear/gear[2]/wow</property>
					</or>
					<property>sim/current-view/internal</property>
				</and>
			</condition>
			<volume>
				<property alias="/params/groundspeed-kt" />
				<type>log</type>
				<factor>0.5</factor>
			</volume>
			<position>
				<x>1.25</x>
				<y>0.01</y>
				<z>-3.357</z>
			</position>
			<reference-dist>6</reference-dist>
			<max-dist>25</max-dist>
		</rumble>		
		
		
		<gear><!-- gear up/dn; should be replaced with better sounds -->
			<name>Gear in transit</name>
			<path>Sounds/gear.wav</path>
			<mode>in-transit</mode>
			<property>gear/gear[0]/position-norm</property>
			<volume>
				<factor>0.5</factor>
			</volume>
			<position>
				<x>-14</x>
				<y>0.01</y>
				<z>-2</z>
			</position>
			<position>
				<x>1.30</x>
				<y>0.01</y>
				<z>-2.50</z>
			</position>
			<reference-dist>2</reference-dist>
			<max-dist>15</max-dist>
		</gear>
		<gear>
			<name>Gear door close</name>
			<path>Sounds/door_close.wav</path>
			<mode>once</mode>
			<condition>
				<and>
					<greater-than>
						<property>sim/time/elapsed-sec</property>
						<value>10</value>
					</greater-than>
					<or>
						<equals>
							<property>gear/gear[0]/position-norm</property>
							<value>0</value>
						</equals>
						<equals>
							<property>gear/gear[0]/position-norm</property>
							<value>1</value>
						</equals>
					</or>
				</and>
			</condition>
			<volume>
				<!-- <offset>-0.75</offset> -->
				<factor>0.2</factor>
			</volume>
			<position>
				<x>1.30</x>
				<y>0.01</y>
				<z>-2.50</z>
			</position>
			<reference-dist>2</reference-dist>
			<max-dist>15</max-dist>
		</gear>
		<!-- APU, same for inside and outside -->
		<apu>
			<name>APU starting</name>
			<mode>once</mode>
			<path>Aircraft/CSeries/Sounds/apu_start.wav</path>
			<condition>
				<and>
					<property>controls/APU/off-on</property>
					<greater-than>
						<property>engines/engine[2]/rpm</property>
						<value>0</value>
					</greater-than>
					<less-than>
						<property>engines/engine[2]/rpm</property>
						<value>99</value>
					</less-than>
				</and>
			</condition>
			<reference-dist>10</reference-dist>
			<max-dist>50</max-dist>
			<position>
				<x>13.30</x>
				<y>0.01</y>
				<z>-0.70</z>
			</position>
		</apu>
		<apu>
			<name>APU running</name>
			<mode>looped</mode>
			<path>Aircraft/CSeries/Sounds/apu_run.wav</path>
			<condition>
				<greater-than-equals>
					<property>engines/engine[2]/rpm</property>
					<value>99</value>
				</greater-than-equals>
			</condition>
			<reference-dist>10</reference-dist>
			<max-dist>50</max-dist>
			<position>
				<x>13.30</x>
				<y>0.01</y>
				<z>-0.70</z>
			</position>
		</apu>
		<apu>
			<name>APU shutdown</name>
			<mode>once</mode>
			<path>Aircraft/CSeries/Sounds/apu_shutdown.wav</path>
			<condition>
				<and>
					<not>
						<property>controls/APU/off-on</property>
					</not>
					<greater-than>
						<property>engines/engine[2]/rpm</property>
						<value>0</value>
					</greater-than>
					<less-than>
						<property>engines/engine[2]/rpm</property>
						<value>99</value>
					</less-than>
				</and>
			</condition>
			<reference-dist>10</reference-dist>
			<max-dist>50</max-dist>
			<position>
				<x>13.30</x>
				<y>0.01</y>
				<z>-0.70</z>
			</position>
		</apu>
